model Pack {
  packId String @id @default(cuid())
  name String
  path String
  rewardNftId String
  listPublicly Boolean @default(true)
  /// When this is shown in a list, how should it sort (is Packs grid page)
  listSortWeight Int @default(0)
  puzzles Puzzle[]
}
model Puzzle {
  puzzleId String @id @default(cuid())
  puzzleName String
  path String
  successMessage String?
  rewardNft String
  listPublicly Boolean @default(true)
  /// When this is shown in a list, how should it sort (ie Puzzles grid page)
  listSortWeight Int
  steps Step[]
  packs Pack[]
  submissions Submission[]
  nft Nft?
}
model Step {
  stepId String @id @default(cuid())
  solution String
  failMessage String?
  successMessage String?
  instructions String?
  challenge String?
  /// When this is shown in a list, how should it sort (ie Steps in a Puzzle)
  listSortWeight Int @default(0)
  puzzleId String
  puzzle Puzzle @relation(fields: [puzzleId], references: [puzzleId])
}

model Nft {
  nftId String @id @default(cuid())
  tokenId Int
  contractName String
  data Json
  cloudinaryId String
  puzzleId String @unique
  puzzle Puzzle @relation(fields: [puzzleId], references: [puzzleId])
}

model Submission {
  submissionId String @id @default(cuid())
  createdAt DateTime @default(now())
  puzzleId String
  puzzle Puzzle @relation(fields: [puzzleId], references: [puzzleId])
  user User @relation(fields: [userId], references: [userId])
  userId String
  email String?
  address String?
}
model User {
  userId String @id @default(cuid())
  createdAt  DateTime   @default(now())
  username String?
  publicAddress String?
  nonce String
  email String?
  twitterProfile String?
  discordProfile String?
  lensProfile String?
  submissions Submission[]
}
